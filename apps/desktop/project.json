{
  "name": "desktop",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/desktop",
  "projectType": "application",
  "implicitDependencies": ["ui-kit"],
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/desktop",
        "command": "vite"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/desktop",
        "command": "tsc && vite build && electron-builder"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/desktop",
        "command": "vite preview"
      }
    },
    "open": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/desktop",
        "command": "open ./release/2.2.0/mac/"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/desktop",
        "command": "rm -rf node_modules/ build/ dist/ dist-electron/ release/"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/desktop",
        "command": "yarn"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/desktop/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}